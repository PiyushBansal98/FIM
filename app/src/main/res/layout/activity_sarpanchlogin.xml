<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sarpanchlogin"
    android:orientation="vertical"
    android:background="@drawable/sarpanch">
    <TextView

        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SARPANCH LOGIN"
        android:textSize="90px"
        android:textAlignment="center"
        android:textColor="#000000"
        android:fontFamily="sans-serif-condensed"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#96acabe1">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            />
        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Username"
            android:layout_marginLeft="20dp"
            android:inputType="text"
            android:id="@+id/tsaenail"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"
            android:id="@+id/tsapassword"
            android:layout_marginTop="10dp"

            />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#ed3d1bba"
            android:layout_marginLeft="150dp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:text="Login"
            android:id="@+id/sarb"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not Registered? Register Here!"
            android:textAlignment="center"
            android:layout_marginTop="10sp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#03177c"
            android:id="@+id/sarb1"/>
    </LinearLayout>







</LinearLayout>