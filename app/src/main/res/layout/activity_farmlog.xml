<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Farmlog"
    android:orientation="vertical"
    android:background="@drawable/farms">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FARMER LOGIN"
        android:textAlignment="center"
        android:textSize="45sp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#b1000000"
        android:background="#906367d6"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150px"
        android:layout_marginLeft="30px"
        android:textSize="50px"
        android:text="NAME :"
        android:textColor="#000000"
        android:fontFamily="monospace"
        android:background="#550d2d03"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/intttex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:background="#55f6f7f5"
        android:hint="Enter Your Name here"
        android:textColorHint="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150px"
        android:layout_marginLeft="30px"
        android:textSize="50px"
        android:text="INSURANCE ID :"
        android:textColor="#000000"
        android:fontFamily="monospace"
        android:background="#550d2d03"
        android:textStyle="bold"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Insurance ID here"
        android:textColorHint="#000000"
        android:id="@+id/instext"

        android:background="#55f6f7f5"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            android:id="@+id/btsub"/>

 <RadioButton
     android:id="@+id/save"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="Save"
     android:textStyle="bold"
     android:textColor="#e4dddd"
     android:textSize="20sp"
     android:layout_marginStart="20dp"
     />
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/happy"
        android:layout_marginTop="100px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />


</LinearLayout>